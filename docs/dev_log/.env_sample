# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token               # Your Slack bot token for authenticating with Slack API as a bot
SLACK_CHANNEL_ID=your-slack-channel-id             # The ID of the Slack channel where messages and files will be posted

SLACK_THREAD_TS=your-slack-thread-timestamp        # Timestamp of the Slack thread to post replies; leave blank for new threads
TEAM_SPRINT_NO=your-current-sprint-number          # The current sprint number for team tracking and organization

# Google Drive Integration
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id # ID of the main Google Drive folder for uploads
GOOGLE_DRIVE_SCOPE=https://www.googleapis.com/auth/drive # Google Drive API scope for file access
GOOGLE_SERVICE_ACCOUNT_FILE=path-to-your-service-account.json # Path to your Google service account JSON file for Drive access

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key                 # Your OpenAI API key for accessing OpenAI services

# GitHub Integration
GITHUB_ACCESS_TOKEN=your-github-access-token       # Your GitHub personal access token for API authentication
GITHUB_WIKI_REPO_URL=your-github-wiki-repo-url     # URL of the GitHub wiki repository for project documentation
GITHUB_WIKI_PAGE_NAME=your-github-wiki-page-name   # Name of the specific GitHub wiki page to update or post content
